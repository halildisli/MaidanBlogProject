@model IEnumerable<TagViewModel>

@{
    ViewData["Title"] = "Tags List";
}

<div class="container m-4">
    <h1 class="text-center m-2">Tags List</h1>

    <p class="text-center">
        <a class="btn btn-warning m-2 rounded-pill" asp-action="AddTag" asp-controller="Admin">Create New Tag</a>
    </p>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr class="text-center">
                <th class="table-dark text-center">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="table-dark text-center">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="table-dark text-center">
                    Manage Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a class="btn btn-warning m-2 rounded-pill" asp-action="EditTag" asp-route-id="@item.Id">Edit</a> |
                                <a class="btn btn-warning m-2 rounded-pill" asp-action="DeleteTag" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>


