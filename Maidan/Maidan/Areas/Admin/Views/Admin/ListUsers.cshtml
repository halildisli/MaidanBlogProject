@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "ListUsers";
    string message = "";
    if (TempData["Message"] != null)
    {
        message = (string)TempData["Message"];
    }
}
@{
    if (message.Contains("success"))
    {
        <div class="alert alert-success text-center">
            <h2>@message</h2>
        </div>
    }
    else if (message.Contains("fail"))
    {
        <div class="alert alert-danger text-center">
            <h2>@message</h2>
        </div>
    }
}

<div class="container m-4">
    <h1 class="text-center m-3">Authors List</h1>
    <hr />
    <p>
        <a asp-action="CreateAdmin" class="btn btn-success text-center">Create New Admin</a>
    </p>
    <table class="table my-3 table-hover">
        <thead>
            <tr>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Photo)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th class="table-dark">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th class="table-dark"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="/images/authorImages/@item.Photo" class="w-50 rounded-circle">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <div class="col-md-6">
                            <a class="btn btn-warning m-2 rounded-pill" asp-action="EditUser" asp-route-id="@item.Id">Edit</a>
                        </div>
                        <div class="col-md-6">
                            <a class="btn btn-danger m-2 rounded-pill" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


