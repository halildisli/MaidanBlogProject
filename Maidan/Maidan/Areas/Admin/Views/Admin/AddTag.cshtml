@model TagViewModel

<div class="container">
    <h1>Add New Tag</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <form asp-action="AddTag" asp-controller="Admin" asp-area="Admin">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" placeholder="Name">
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" placeholder="Description">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Add Tag"/>
            </div>
        </form>
        <div>
            <a class="btn btn-primary my-2" asp-action="Index" asp-controller="Admin" asp-area="Admin">Back To Main Page</a>
        </div>
        <div>
            <a class="btn btn-warning my-2" asp-action="ListTags" asp-controller="Admin" asp-area="Admin">Go To Tag List</a>
        </div>
    </div>
    
</div>
