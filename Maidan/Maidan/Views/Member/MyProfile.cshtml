                <span asp-validation-for="InstagramUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebsiteUrl" class="control-label"></label>
                <input asp-for="WebsiteUrl" class="form-control" />
                <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3>Your Interests</h3>
                <ul class="list-unstyled">
                    @{
                        foreach (var item in Model.Tags)
                        {
                            <li class="btn btn-info rounded-pill">@item.Name</li>
                        }
                    }
                </ul>
            </div>
            <div class="form-group">
                <label id="tags" class="mb-1">
                    <span style="padding-right:10px">Choose All / Clear</span>
                    <input type="checkbox" id="chooseAll" /><i></i>
                </label>
                <select name="TagsList"
                        id="select2"
                        multiple="multiple"
                        class="form-control"
                        asp-items="ViewBag.Tags"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
