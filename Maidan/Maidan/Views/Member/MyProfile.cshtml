                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubDomain" class="control-label"></label>
                <input asp-for="SubDomain" class="form-control" />
                <span asp-validation-for="SubDomain" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GithubUrl" class="control-label"></label>
                <input asp-for="GithubUrl" class="form-control" />
                <span asp-validation-for="GithubUrl" class="text-danger"></span>
