@{
    var photoPath = "default-author-image.png";
    if (Model.Photo!=null)
    {
        photoPath = Model.Photo;
    }
}

<h1 class="text-center">Your Profile Informations</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="MyProfile" method="post" enctype="multipart/form-data">
