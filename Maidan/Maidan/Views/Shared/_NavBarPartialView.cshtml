@{
    if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-toggleable-md navbar-light bg-white fixed-top mediumnavigation">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <!-- Begin Logo -->
                <a class="navbar-brand" asp-action="Index">
                    <img src="/assets/img/logo.png" alt="logo">
                </a>
                <!-- Begin Search -->
                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                </form>
                <!-- End Search -->
                <!-- End Logo -->
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <!-- Begin Menu -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="CreateArticle" asp-controller="Member">Write a Article..</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="MyArticles" asp-controller="Member">My Articles</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="AllArticles" asp-controller="Member">All Articles</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link btn btn-warning" asp-action="SignOut" asp-controller="Member">Sign Out</a>
                        </li>
                        <li class="nav-item dropdown m-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-action="MyProfile" asp-controller="Member">Your Profile</a></li>
                                    <li><a class="dropdown-item" href="#">Manage Membership</a></li>
                                    <li><a class="dropdown-item" href="#">Account Settings</a></li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                    <!-- End Menu -->

                </div>
            </div>
        </nav>
    }
    else
    {
        <nav class="navbar navbar-toggleable-md navbar-light bg-white fixed-top mediumnavigation">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container">
                <!-- Begin Logo -->
                <div>
                    <a class="navbar-brand" asp-action="Index">
                        <img src="/assets/img/logo.png" alt="logo">
                    </a>
                </div>
                <!-- End Logo -->
                <!-- Begin Search -->
                <div>
                    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                    </form>
                </div>
                <!-- End Search -->
                <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                    <!-- Begin Menu -->
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="AboutUs" asp-controller="Home">AboutUs<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="Membership" asp-controller="Home">Membership</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link" asp-action="ListTags" asp-controller="Home">Tags</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link btn btn-warning" asp-action="SignUp" asp-controller="Home">Sign Up</a>
                        </li>
                        <li class="nav-item m-2">
                            <a class="nav-link btn btn-success" asp-action="SignIn" asp-controller="Home">Sign In</a>
                        </li>
                    </ul>
                    <!-- End Menu -->
                </div>
            </div>
        </nav>
    }
}

